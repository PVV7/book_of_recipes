{% extends 'menu/menu_new' %}

{% block title %}Авторизация{% endblock %}
{#{% import _self as this %}#}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('public/assets/css/login.css') }}">
{% endblock %}

{% block content %}
    <div class="container" style="margin-top: 20px">
        <h3 class="service-card-title" style="text-align: center;" data-aos="fade-up">Авторизация</h3>


        <div class="login row justify-content-md-center m-0 pt-3">
            <div class="col-lg-4 shadow p-3 mt-5 bg-body rounded">
                <form action="{{ route('login') }}" method="post" id="form-login">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}">

                        {% for error in errors.all() %}
                            <li>{{error}}</li>
                        {% endfor %}

                    <div class="mb-3">
					    <label for="email" class="form-label">
                            E-mail
                        </label>
                        <input type="text" class="form-control" name="email" id="email"  value="{{ old('email') }}" aria-describedby="userNameHelp">
                    </div>

                    <div class="mb-3">
                        <label for="pass" class="form-label">
                            Пароль
                        </label>
                        <input type="text" class="form-control" name="password" id="pass"  aria-describedby="passHelp">
                    </div>

                    <div class="flex items-center justify-between mb-6">
                        <div class="flex items-center gap-2">
                            <input type="checkbox" id="remember" name="remember" class="h-4 w-4 rounded border-gray-300 text-green-600 focus:ring-green-500" />
                            <label for="remember" class="text-sm text-gray-900">Запомнить меня</label>
                        </div>
                        <a href="{{ route('password.request') }}" class="text-sm font-medium text-green-600 hover:text-green-500">Забыли пароль?</a>
                    </div>

                    <button type="submit" class="w-full btn btn-primary btn-acc-group" style="margin-top: 10px">Отправить</button>
                </form>
            </div>
        </div>
    </div>>
{% endblock %}

