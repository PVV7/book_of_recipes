

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
{#    <link rel="stylesheet" href="{{ asset('lte/bower_components/select2/dist/css/select2.min.css') }}">#}
    <link rel="stylesheet" href="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css') }}"integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
{% endblock %}

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>
		{% if isAdminLogin %}
			ADMIN
		{% endif %}
		{{ loginHeaderText }}
	</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<div class="container">
		<div class="login row justify-content-md-center m-0 pt-3">
		<div class="col-lg-4 shadow p-3 mt-5 bg-body rounded">
			<h4 class="text-center">
				{% if isAdminLogin %}
					ADMIN
				{% endif %}
				{{ loginHeaderText }}
			</h4>
			<form action="login" method="POST" id="form-login" class="needs-validation">
				<div class="mb-3">
					<label for="userName" class="form-label">User</label>
					<input required=""  type="text" class="form-control" id="userName" aria-describedby="userNameHelp">
					<div class="invalid-feedback">
						Write a valid user name
					</div>
				</div>
				<div class="mb-3">
					<label for="pass" class="form-label">Password</label>
					<input required=""  type="text" class="form-control" id="pass" aria-describedby="passHelp">
					<div class="invalid-feedback">
						Write your password
					</div>
				</div>
				{{ submitButtonHTML|raw }}
				<hr/>
				<div class="form-text">Haz iniciado {{ totalSiteLogins|number_format }}
					{% if totalSiteLogins > 1 or  totalSiteLogins == 0 %}
						veces
					{% else %}
						vez
					{% endif %}
				</div>
			</form>
		</div>

	</div>
</div>
</body>
</html>
