{% extends 'menu/menu' %}

{#{% block title %}Регистрация{% endblock %}#}
{#{% import _self as this %}#}

{% block stylesheets %}
    {{ parent() }}

    <style>
        .items-center{
            border-radius: 3px;
            padding: 15px 30px 15px 15px;
            display: flex;
            justify-content: center;
        }
    </style>

{% endblock %}

{% block content%}

    <H1>Главная</H1>
    <form action="{{ route('main') }}" method="get">
        <button type="submit">EXAMPLE</button>
    </form>


    <div class="login row justify-content-md-center m-0 pt-3">
        <div class="items-center">
            {% for item in recipes %}
                <a href="">
                    <div class="recipe-block">
                        <div class="image-div">
                            <h6>{{ item.name }}</h6>
                            {% for img in item.image %}
                                <h6>{{ img }}</h6>
                            {% endfor %}
                        </div>
                    </div>
                </a>
            {% endfor %}

        </div>
    </div>

{% endblock %}
